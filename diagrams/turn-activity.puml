@startuml
title How is a turn of Demesne played?
skinparam hyperlinkColor black
skinparam hyperlinkUnderline false

start

partition Action Phase {
  :Begin Action Phase;

  repeat
    :[[action-card-activity.puml {How is an Action Card played?} Play Action Card]];
  repeat while () is ([Willing and able])

  :End Action Phase;
}

partition Buy Phase {
  :Begin Buy Phase;

  repeat
    :[[treasure-card-activity.puml {How is a Treasure Card played?} Play Treasure Card]];
  repeat while () is ([Willing and able])

  repeat
    :Buy Card;
  repeat while () is ([Willing and able])

  :End Buy Phase;
}

partition Clean Up Phase {
  :Begin Clean Up Phase;

  :Discard all Cards in hand or in play;

  :Draw five Cards to hand;

  :End Clean Up Phase;
}

stop

@enduml
